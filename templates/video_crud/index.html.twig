{% extends 'admin_base.html.twig' %}

{% block title %}Vidéos
{% endblock %}

{% block body %}
	<main class="p-5 w-100">
		<h1>Vidéos</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Titre</th>
					<th>Contenu</th>
					<th>Video</th>
					<th>Image de présentation</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for post in posts %}
					<tr>
						<td>{{ post.title }}</td>
						<td>{{ post.content }}</td>
						<td>{{ post.video }}</td>
						<td><img class="thumbnail-admin" src="{{ asset(post.thumbnail) }}" alt="Miniature"></td>
						<td>
							<div class="dropdown">
								<a class=" btn btn-primary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fa-solid fa-pen"></i>
								</a>
								<div class="dropdown-menu  dropdown-menu-end" aria-labelledby="dropdownMenuButton">

									<a class="dropdown-item" href="{{ path('app_video_crud_show', {'id': post.id}) }}">Voir</a>
									<a class="dropdown-item text-warning" href="{{ path('app_video_crud_edit', {'id': post.id}) }}">Modifier</a>
									{{ include('video_crud/_delete_form.html.twig') }}
								</div>
							</div>
						</td>
					</tr>
				</div>
			</tbody>
		</td>
	</tr>
{% else %}
	<tr>
		<td colspan="7">Aucun article trouvé</td>
	</tr>
{% endfor %}</tbody></table><a class="btn btn-primary" href="{{ path('app_video_crud_new') }}">Nouvel article</a></main>{% endblock %}
