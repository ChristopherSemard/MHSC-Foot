{% extends 'admin_base.html.twig' %}

{% block title %}Post
{% endblock %}

{% block body %}
	<main class="p-5">
		<h1>Post</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ post.id }}</td>
				</tr>
				<tr>
					<th>Type</th>
					<td>{{ post.type }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ post.title }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<td>{{ post.content }}</td>
				</tr>
				<tr>
					<th>Video</th>
					<td>{{ post.video }}</td>
				</tr>
				<tr>
					<th>Thumbnail</th>
					<td>{{ post.thumbnail }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_gallery_crud_index') }}">back to list</a>

		<a href="{{ path('app_gallery_crud_edit', {'id': post.id}) }}">edit</a>

		{{ include('gallery_crud/_delete_form.html.twig') }}
	</main>
{% endblock %}
