{{ form_start(form) }}
{{ form_errors(form) }}

{{ form_row(form.title) }}
{{ form_row(form.thumbnail) }}
{{ form_row(form.category) }}
{{ form_row(form.content) }}
{{ form_row(form.imagePosts) }}


{% if app.request.attributes.get('_route') == 'app_gallery_crud_edit'  %}
	<div class="edit-image-list">
		<h2>Images</h2>
		{% for image in post.imagePosts %}
			<pre>
			{{ dump(image) }}
		</pre>
			<div>
				<img src="{{ asset( image.imageUrl)}}" alt=" Image">
				<a class="text-danger nav-link" href="{{path('app_gallery_crud_delete_image', {'id':image.id})}}" data-delete data-token="{{csrf_token('delete' ~ image.id)}}">Supprimer</a>
			</div>
		{% endfor %}
	</div>
{% endif %}
<button class="btn btn-primary mb-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
